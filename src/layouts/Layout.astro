---
import Navbar from '../components/Navbar.astro';
import Sidebar from '../components/Sidebar.astro';
import Footbar from '../components/Footbar.astro';
interface Props {
  titulo: string;
}

const { titulo } = Astro.props;
---

<!doctype html>
<html lang="es-ES">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{titulo}</title>
  </head>

  <body>
    <div class="layout">
      <Navbar />
      <!-- <Sidebar /> -->
      <slot />
      <Footbar />
    </div>
  </body>
</html>

<style>
  .layout {
    background-image: url(./img/seta.jpg);
    min-height: 100dvh;
    max-width: 100dvw;
    display: flex;
    flex-flow: column nowrap;
    & > :first-child {
      flex: 10;
    }
    & > :last-child {
      flex: 15;
    }
  }
</style>

